    <script src="/assets/js/select2-searchinputplaceholder.js"></script>
    <script src="/assets/js/message.js"></script>
    <script src="/assets/js/script-user.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#banner-carousel").owlCarousel({
                items: 1, // Number of cards shown in each slide
                loop: true, // Continuously loop the carousel
                margin: 20, // Space between cards
                nav: false, // Show navigation buttons
                autoPlay: true,
                pagination: true,
                paginationSpeed: 3000,
                navText: ["<i class='fas fa-chevron-left'></i>", "<i class='fas fa-chevron-right'></i>"], // Custom navigation icons
                responsive: {
                    0: {
                        items: 1 // Number of cards shown in the carousel for smaller screens
                    },
                    768: {
                        items: 1 // Number of cards shown in the carousel for medium screens
                    },
                    992: {
                        items: 1 // Number of cards shown in the carousel for large screens
                    }
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false);
</body>

