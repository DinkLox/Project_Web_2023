@model WEB_2023.Models.Auth.SignUpModel;
@{
    ViewData["Title"] = "Đăng ký";
    var currentPath = Context.Request.Path;
    var status = TempData["SignUpStatus"]?.ToString();
}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-xxl-4 col-xl-6 col-lg-6 col-md-8 col-sm-8">
            <div class="edit-profile">
                <div class="edit-profile__logos">
                    <a href="index.html">
                        <img class="dark" src="/img/Logo-Hori.png" alt="">
                        <img class="light" src="/img/Logo-Hori-White.png" alt="">
                    </a>
                </div>
                <div class="card border-1">
                    <div class="card-header">
                        <div class="edit-profile__title">
                            <h6>Đăng ký tài khoản</h6>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (status == "success")
                        {
                            <div class="dm-notice__icon bg-success">
                                <i class="fas fa-check color-white"></i>
                            </div>
                            <div class="dm-notice__text text-center">
                                <h4>Đăng ký tài khoản thành công!</h4>
                                <ul>
                                    <li>Chúng tôi đã gửi email chứa liên kết xác thực đến địa chỉ email của bạn, vui lòng
                                        kiểm tra để tiến hành xác mình tài khoản</li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <form id="login-form" class="edit-profile__body" asp-controller="Account" asp-action="SignUp"
                                asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                                @Html.AntiForgeryToken()
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group mb-25">
                                            <label asp-for="FullName">Họ và tên</label>
                                            <input required asp-for="FullName" type="text" class="form-control rounded-pill"
                                                id="fullname" placeholder="Họ và tên...">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group mb-25">
                                            <label asp-for="Email">Email</label>
                                            <input required asp-for="Email" type="text" class="form-control rounded-pill"
                                                id="username" placeholder="Email">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group mb-15">
                                            <label asp-for="Password">Mật khẩu</label>
                                            <div class="position-relative">
                                                <input required id="password-field" asp-for="Password" type="password"
                                                    class="rounded-pill form-control" name="password" placeholder="*******">
                                                <div
                                                    class="uil uil-eye-slash text-lighten fs-15 field-icon toggle-password2">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group mb-15">
                                            <label asp-for="ConfirmPassword">Nhập lại mật khẩu</label>
                                            <div class="position-relative">
                                                <input required id="password" asp-for="ConfirmPassword" type="password"
                                                    class="rounded-pill form-control" placeholder="*******">
                                                <div
                                                    class="uil uil-eye-slash text-lighten fs-15 field-icon toggle-password2">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div asp-validation-summary="ModelOnly"
                                    class="text-center text-danger error-message text-small">
                                </div>

                                <div class="spin-embadded loading-element">
                                    <div class="admin__button-group button-group d-flex pt-1 justify-content-md-start justify-content-center"
                                        role="alert">
                                        <button type="submit"
                                            class="btn btn-primary rounded-pill btn-default w-100 btn-squared lh-normal px-50 signIn-createBtn"
                                            id="login-submit-btn">
                                            Đăng ký
                                        </button>
                                        <div class="loaded-spin text-center">
                                            <div class="dm-spin-dots spin-sm">
                                                <span class="spin-dot badge-dot dot-primary"></span>
                                                <span class="spin-dot badge-dot dot-primary"></span>
                                                <span class="spin-dot badge-dot dot-primary"></span>
                                                <span class="spin-dot badge-dot dot-primary"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        }
                    </div><!-- End: .card-body -->
                    <div class="px-20">
                        <p class="social-connector social-connector__admin text-center">
                            <span>Hoặc</span>
                        </p>
                        <div class="button-group d-flex align-items-center justify-content-center">
                            <ul class="admin-socialBtn">
                                <li>
                                    <button class="rounded-circle btn text-dark google">
                                        <img class="svg" src="/img/google-Icon.svg" alt="img" />
                                    </button>
                                </li>
                                <li>
                                    <button class="rounded-circle wh-48 content-center facebook">
                                        <i class="uil uil-facebook-f"></i>
                                    </button>
                                </li>
                                <li>
                                    <button class="rounded-circle wh-48 content-center github">
                                        <i class="uil uil-github"></i>
                                    </button>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="admin-topbar">
                        <p class="mb-0">
                            Bạn đã có tài khoản?
                            <a asp-asp-controller="Account" asp-action="Login" class="color-primary">
                                Đăng nhập ngay
                            </a>
                        </p>
                    </div><!-- End: .admin-topbar  -->
                </div><!-- End: .card -->
            </div><!-- End: .edit-profile -->
        </div><!-- End: .col-xl-5 -->
    </div><!-- End: .admin-element  -->
</div><!-- End: .container-fluid -->
<div id="overlayer">
    <div class="loader-overlay">
        <div class="dm-spin-dots spin-lg">
            <span class="spin-dot badge-dot dot-primary"></span>
            <span class="spin-dot badge-dot dot-primary"></span>
            <span class="spin-dot badge-dot dot-primary"></span>
            <span class="spin-dot badge-dot dot-primary"></span>
        </div>
    </div>
</div>
<div class="enable-dark-mode dark-trigger">
    <ul>
        <li>
            <a>
                <i class="uil uil-moon"></i>
            </a>
        </li>
    </ul>
</div>

@if (currentPath.StartsWithSegments("/account/login"))
{
    @section ScriptLogin {
    <script>
        // Clear error message
        const username = document.getElementById('username');
        const password = document.getElementById('password-field');
        const loadingElement = document.querySelector('.loading-element');
        const loginForm = document.getElementById("login-form");
        const loginBtn = document.getElementById("login-submit-btn");
        const error = document.querySelector('.error-message');
        if (error && error.textContent !== '') {
            username?.addEventListener('input', () => {
                error.textContent = '';
            });
            password?.addEventListener('input', () => {
                error.textContent = '';
            });
        }
        if (window.history.replaceState) {
            window.history.replaceState(null, null, window.location.href);
        }
        loginForm?.addEventListener("submit", async (e) => {
            loginBtn.classList.add("disabled");
            loginBtn.textContent = "";
            loginBtn.style.opacity = "0.1";
            loadingElement.classList.add("spin-active");
            setTimeout(() => {
                loginBtn.classList.remove("disabled");
                loginBtn.style.opacity = "1";
                loginBtn.innerText = "Đăng nhập";
                loadingElement.classList.remove("spin-active");
            }, 5000);
        }
        );
    </script>
}
}