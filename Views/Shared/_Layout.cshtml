<body class="top-menu">
    <partial name="~/Views/Shared/Components/Header/Header.cshtml" />
    <main role="main" class="main-content">
        <div class="sidebar-wrapper">
            <partial name="~/Views/Shared/Components/Sidebar/Sidebar.cshtml" />
        </div>
        <div class="contents px-0">
            <section class="container">
                <div class="banner">
                    <div id="banner-carousel" class="row owl-carousel owl-theme my-3">
                        <a href="#"><img class="w-100" src="/img/Banner.jpg" /></a>
                        <a href="#"><img class="w-100" src="/img/Banner-1.jpg" /></a>
                        <a href="#"><img class="w-100" src="/img/Banner-2.jpg" /></a>
                        <a href="#"><img class="w-100" src="/img/Banner-3.jpg" /></a>
                    </div>
                </div>
            </section>
            @RenderBody()
        </div>
    </main>
    <partial name="~/Views/Shared/Components/Footer/Footer.cshtml" />
    <div class="overlay-dark-sidebar"></div>
    <div class="customizer-overlay"></div>
    <div class="message-wrapper"></div>
    <div class="customizer-wrapper">
        <div class="customizer">
            <div class="customizer__head">
                <h4 class="customizer__title">Chỉnh sửa giao diện</h4>
                <span class="customizer__sub-title">Chọn kiểu giao diện mà bạn thích</span>
                <a href="#" class="customizer-close">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                        stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                        class="svg replaced-svg" style="color: #ff4d4f">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </a>
            </div>
            <div class="customizer__body">
                <div class="customizer__single">
                    <h4>Kiểu bố cục</h4>
                    <ul class="customizer-list d-flex layout">
                        <li class="customizer-list__item">
                            <a href="#" class="active">
                                <img src="/img/ltr.png" alt="" />
                                <i class="fa fa-check-circle"></i>
                            </a>
                        </li>
                        <li class="customizer-list__item">
                            <a href="#">
                                <img src="/img/rtl.png" alt="" />
                                <i class="fa fa-check-circle"></i>
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="customizer__single">
                    <h4>Chế độ hiển thị</h4>
                    <ul class="customizer-list d-flex l_sidebar">
                        <li class="customizer-list__item">
                            <a href="#" id="light-banner-change" data-layout="light" class="dark-mode-toggle">
                                <img src="/img/light.png" alt="" />
                                <i class="fa fa-check-circle"></i>
                            </a>
                        </li>
                        <li class="customizer-list__item">
                            <a href="#" id="dark-banner-change" data-layout="dark" class="dark-mode-toggle">
                                <img src="/img/dark.png" alt="" />
                                <i class="fa fa-check-circle"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- inject:js-->
